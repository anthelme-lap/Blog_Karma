{% extends 'base.html.twig' %}

{% block title %}Compte | Karma{% endblock %}

{% block body %}

{{ include ("partials/breadcrumbs.html.twig", {'name':'Compte'})}}

<div class="container">
    <div class="row mt-5 mb-5 my-5 mx-5">
        <div class="col-md-6 mx-auto shadow text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        {# {% include "partials/_FlashVerifCompte.html.twig" %} #}
            <h1 class="my-5">Compte</h1>
            <a href="">
                <img width="100px" 
                    {% if app.user.image %}
                        src="../../assetstyle/img/banner/{{vich_uploader_asset(user, 'imageFile')}}"
                    {% else %}
                        src="../../assetstyle/img/banner/imageUser.jpg"
                    {% endif  %}
                    class="shadow rounded-circle"
                >
            </a>
            <p class="mt-5 lead">{{app.user.email}}</p>
            <h2 class="my-5">{{app.user.name}} {{app.user.firstname}}</h2>
            <p class="mt-5 lead">
                <a href="{{path('app_account_edit')}} ">Modifier compte</a> 
                | 
                <a href="{{path('app_account_password_change')}} ">Modifier mot de passe</a>
            </p>

        </div>
    </div>
</div>
{% endblock %}
