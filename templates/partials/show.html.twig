    <section class="blog_area single-post-area section_gap">
        <div class="container">
            <div class="row">                
                <div class="col-lg-12 posts-list">
                    <div class="single-post row">
                    {% if article %}
                        <div class="col-lg-12">
                            <div class="feature-img">
                                <img class="img-fluid" src="../../assetstyle/img/{{article.image}}" width="1100px" alt="article">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 blog_details">
                            <h2>{{article.title}}</h2>
                            <p class="excert text-justify">
                                {{article.description | raw}}
                            </p>
                        </div>
                        
                        {% endif %}
                    </div>
                
                    <div class="comments-area">
                        <h4> Commentaires</h4>
                        {% for comment in article.comments %}
                            {% if comment.commentParent == null %}
                                <div class="comment-list">
                                    <div class="single-comment justify-content-between d-flex">
                                        <div class="user justify-content-between d-flex">
                                            <div class="thumb">
                                                <img src="../../assetstyle/img/banner/{{comment.user.image}}" alt="">
                                            </div>
                                            <div class="desc">
                                                <h5><a href="#">{{comment.user}}</a></h5>
                                                <p class="date">{{comment.createdAt|date("d/m/y H:i")}} </p>
                                                <p class="comment">
                                                    {{comment.message}}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="reply-btn">
                                            <a href="#id-comment" data-reply data-id="{{comment.id}}" class="btn-reply text-uppercase">repondre</a>
                                        </div>
                                    </div>
                                </div>

                                {# Reponse aux commentaires #}
                                {% for reponse in comment.comments %}
                                    <div class="comment-list left-padding">
                                        <div class="single-comment justify-content-between d-flex">
                                            <div class="user justify-content-between d-flex">
                                                <div class="thumb">
                                                    <img src="../../assetstyle/img/banner/c2.jpg" alt="">
                                                </div>
                                                <div class="desc">
                                                    <h5><a href="#">{{reponse.user}}</a></h5>
                                                    <p class="date">Réponse publiée le{{reponse.createdAt|date("d/m/y H:i")}} </p>
                                                    <p class="comment">
                                                        {{reponse.message}}!
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}    
                        {% endfor %}
                        
                    </div>
                    <nav class="blog-pagination justify-content-center d-flex">
                        <ul class="pagination">
                            <li class="page-item">{{knp_pagination_render(comments)}}</a></li>
                        </ul>
                    </nav>
                    <div class="comment-form" id="id-comment">
                        <h4>Laissez un commentaire</h4>
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.message) }}
                            </div>
                            <button type="submit" class="primary-btn submit_btn">Post Comment</button>
                        {{ form_end(form) }}
